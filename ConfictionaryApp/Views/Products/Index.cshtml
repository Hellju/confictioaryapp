@model IEnumerable<ConfictionaryApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
    <a class="btn btn-outline-secondary float-right" asp-action="ProductSearchForm">Search</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a class="btn btn-light" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a class="btn btn-light" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
